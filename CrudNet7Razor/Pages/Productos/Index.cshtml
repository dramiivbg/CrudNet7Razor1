@page
@model CrudNet7Razor.Pages.Productos.IndexModel
@{
    ViewData["Title"] = "Lista de productos";
}



@if (Model.mensaje != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.mensaje
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    
}




<div class="card">
    <div class="card-header bg-dark">
        <div class="row">
            <div class="col-sm-9">
                <h2 class="text-info">Lista de productos</h2>
            </div>
            <div class="col-sm-3">
                <a asp-page="Crear" class="btn btn-primary">Crear Nuevo Porducto</a>
            </div>
        </div>
    </div>
   <div class="card-body">
       <form method="post">
       @if (Model.Productos.Count() > 0)
        {

            <br />
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Productos.First().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Productos.First().NombreProducto)</th>
                    <th>@Html.DisplayNameFor(m => m.Productos.First().Descripcion)</th>
                    <th>@Html.DisplayNameFor(m => m.Productos.First().EnStock)</th>
                    <th>@Html.DisplayNameFor(m => m.Productos.First().precio)</th>
                    <th>@Html.DisplayNameFor(m => m.Productos.First().FechaCreacion)</th>
                    <th>Acciones</th>
                </tr>
                @foreach (var item in  Model.Productos)
                {
                  <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.NombreProducto)</td>
                        <td>@Html.DisplayFor(m => item.Descripcion)</td>
                        <td>@Html.DisplayFor(m => item.EnStock)</td>
                        <td>@Html.DisplayFor(m => item.precio)</td>
                        <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                    <td>
                        <a asp-route-id="@item.Id" asp-page="Editar" class="btn btn-success btn-sm">Editar</a>
                        <button asp-page-handler="Borrar" asp-route-id="@item.Id" onclick="return confirm('Esta seguro de borrar el producto?')" class="btn btn-danger btn-sm">Borrar </button>
                    </td>

                  </tr>

                    
                }
            </table>
            
        }

        else
        {
            <p>No hay Productos disponibles</p>
        }
        </form>
    </div>
</div>